<aside class="admin-nav" id="adminMenu">
      <div class="row row-menu-button">
        <%= link_to destroy_admin_user_session_path, data: { turbo_method: :delete }, class: "logout" do %>
          <%= image_tag "icons/white/exit.svg", alt: "exit" %>
        <% end %>
        <a href="#" id="adminMenuButton">
          <%= image_tag "icons/white/menu.svg", alt: "menu" %>
        </a>
      </div>
      <div class="row center">
        <%= link_to admin_path, class: "logo" do %>
          <%= image_tag "logo.svg", alt: "Logo Ruby Blog" %>
        <% end %>
      </div>
      <div class="row center column">
        <h3 class="user-name"><%= current_admin_user.name %></h3>
        <h4 class="user-email"><%= current_admin_user.email %></h4>
      </div>
      <div class="row">
        <nav class="menu">
          <%= link_to admin_articles_path, class: current_page?(admin_articles_path) ? "active" : "" do %>
            <div class="icon">
              <%= image_tag "icons/white/posts.svg", alt: "posts" %>
            </div>
            <label for="#">Posts</label>
          <% end %>
          <%= link_to admin_categories_path, class: current_page?(admin_categories_path) ? "active" : "" do %>
            <div class="icon">
              <%= image_tag "icons/white/categories.svg", alt: "categories" %>
            </div>
            <label for="#">Categorias</label>
          <% end %>
          <%= link_to admin_authors_path, class: current_page?(admin_authors_path) ? "active" : "" do %>
            <div class="icon">
              <%= image_tag "icons/white/author.svg", alt: "authors" %>
            </div>
            <label for="#">Autores</label>
          <% end %>
        </nav>
      </div>
    </aside>