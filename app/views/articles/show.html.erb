								<a href="#" class="share"></a>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="secondary-content">
				<a href="#" class="post-content-ad">
					<%= image_tag "ad/post-content-ad.jpg", alt: "Post Content Ad" %>
				</a>
				<div class="post-detail-other-posts">
					<div class="other-posts-title">Outras publicações</div>
          <% @other_articles.each do |article| %>
            <%= link_to article_path(article), class: "post-resume" do %>
              <%= image_tag cover_image_fallback(article), class: "post-resume-image", alt: article.title %>
              <h4 class="post-resume-title"><%= article.title %></h4>
            <% end %>
          <% end %>
				</div>
				<a href="#" class="post-content-ad">
					<%= image_tag "ad/post-content-footer-ad.jpg", alt: "Post Content Footer Ad" %>
				</a>
			</div>
		</div>
		</div>
</section>